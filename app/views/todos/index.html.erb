<h1>Index PAge</h1>

<p>
    <%= link_to "Add New Todo", new_todo_path %>
</p>

<table>
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delte</th>
    </tr>
    
    <% @todos.each do |t| %>
    <tr>
        <td><%= t.name %></td>
        <td> <%= t.description %> </td>
        <td> <%= link_to "Show", todo_path(t) %></td>
        <td> <%= link_to "Update", edit_todo_path(t) %></td>
        <td><%= link_to 'delete', todo_path(t), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
</table>